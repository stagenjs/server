{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "outDir": "./lib/",
        "removeComments": true,
        "importHelpers": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "incremental": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "./spec",
        "./lib"
    ]
}